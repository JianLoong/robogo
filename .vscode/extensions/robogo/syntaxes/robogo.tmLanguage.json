{
    "name": "Robogo",
    "scopeName": "source.robogo",
    "fileTypes": [
        "robogo"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#actions"
        },
        {
            "include": "#var_keys"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#numbers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.robogo",
                    "match": "#.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.robogo",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.robogo",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.robogo",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.robogo",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.robogo",
                    "match": "\\b(testcase|description|steps|variables|verbose|name|action|args|result|if|for|while|then|else|retry|attempts|backoff|continue_on_failure|condition|var|secrets|data_management|environments|data_sets|validation|setup|teardown|isolation|cleanup|environment|schema|required|unique|relations|version|overrides|mask_output|value|file)\\b"
                }
            ]
        },
        "actions": {
            "patterns": [
                {
                    "name": "support.function.action.robogo",
                    "match": "\\b(log|sleep|assert|get_time|get_random|concat|length|http|http_get|http_post|postgres|variable|control|tdm)\\b"
                }
            ]
        },
        "var_keys": {
            "patterns": [
                {
                    "name": "variable.parameter.robogo",
                    "match": "^(\\s{2,}|\\t)([a-zA-Z_][a-zA-Z0-9_]*)(?=:)"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.robogo",
                    "match": "\\$\\{[^}]+\\}"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.robogo",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        }
    }
}