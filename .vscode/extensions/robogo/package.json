{
  "name": "robogo",
  "displayName": "Robogo",
  "description": "Enhanced support for Robogo test automation framework - syntax highlighting, autocompletion, validation, and test execution",
  "version": "0.5.0",
  "publisher": "robogo",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Testing"
  ],
  "keywords": [
    "robogo",
    "test",
    "automation",
    "yaml",
    "testing",
    "postgresql",
    "database",
    "secrets",
    "variables",
    "verbosity",
    "debugging",
    "http",
    "api"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:robogo",
    "onCommand:robogo.runTest",
    "onCommand:robogo.listActions"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "robogo",
        "aliases": [
          "Robogo",
          "robogo"
        ],
        "extensions": [
          ".robogo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "robogo",
        "scopeName": "source.robogo",
        "path": "./syntaxes/robogo.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "robogo.runTest",
        "title": "Robogo: Run Test",
        "category": "Robogo"
      },
      {
        "command": "robogo.listActions",
        "title": "Robogo: List Actions",
        "category": "Robogo"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "robogo.runTest",
          "when": "resourceExtname == .robogo || resourceExtname == .yaml || resourceExtname == .yml"
        },
        {
          "command": "robogo.listActions"
        }
      ],
      "editor/context": [
        {
          "command": "robogo.runTest",
          "when": "resourceExtname == .robogo || resourceExtname == .yaml || resourceExtname == .yml",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Robogo",
      "properties": {
        "robogo.executablePath": {
          "type": "string",
          "default": "robogo",
          "description": "Path to the Robogo executable"
        },
        "robogo.outputFormat": {
          "type": "string",
          "enum": [
            "console",
            "json",
            "markdown"
          ],
          "default": "console",
          "description": "Default output format for test execution"
        },
        "robogo.showDetailedDocumentation": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed parameter documentation in hover tooltips"
        }
      }
    },
    "snippets": [
      {
        "language": "yaml",
        "path": "./robogo.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "build": "npm run compile && npm run package",
    "dev": "npm run watch",
    "test": "npm run compile && code --extensionDevelopmentPath=."
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.0.0",
    "@types/js-yaml": "^4.0.5",
    "typescript": "^4.5.0"
  }
}