testcase: Kafka Timeout Error Handling
description: Kafa Timeout Test
variables:
  vars:
    kafka_broker: "localhost:9092"
    kafka_topic: "robogo_test_topic"
    test_message: "hello from robogo"
steps:
  - name: Kafka Consume Timeout Test
    action: kafka
    args:
      - consume
      - localhost:9092
      - my-topic
      - 
        fromOffset: "first"
        count: 1
        timeout: 1


  - name: Assert Timeout Error
    action: assert
    args:
      - "${__robogo_steps[0].error}"
      - ==
      - timeout
      - "Expected a timeout error when no message is available" 