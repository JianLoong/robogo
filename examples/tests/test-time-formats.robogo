# Test Time Format Options
# This file demonstrates all available time format options

testcase: "Time Format Test"
description: "Test file to demonstrate all time format options for get_time action"

steps:
  # Test predefined formats
  - action: get_time
    args: ["iso"]
    result: iso_time
  
  - action: log
    args: ["ISO format: ${iso_time}"]
  
  - action: get_time
    args: ["iso_date"]
    result: iso_date
  
  - action: log
    args: ["ISO date: ${iso_date}"]
  
  - action: get_time
    args: ["iso_time"]
    result: iso_time_only
  
  - action: log
    args: ["ISO time: ${iso_time_only}"]
  
  - action: get_time
    args: ["datetime"]
    result: datetime
  
  - action: log
    args: ["Datetime: ${datetime}"]
  
  - action: get_time
    args: ["date"]
    result: date_only
  
  - action: log
    args: ["Date only: ${date_only}"]
  
  - action: get_time
    args: ["time"]
    result: time_only
  
  - action: log
    args: ["Time only: ${time_only}"]
  
  - action: get_time
    args: ["timestamp"]
    result: timestamp
  
  - action: log
    args: ["Timestamp: ${timestamp}"]
  
  - action: get_time
    args: ["unix"]
    result: unix_timestamp
  
  - action: log
    args: ["Unix timestamp: ${unix_timestamp}"]
  
  - action: get_time
    args: ["unix_ms"]
    result: unix_ms_timestamp
  
  - action: log
    args: ["Unix timestamp (ms): ${unix_ms_timestamp}"]
  
  # Test custom Go format strings
  - action: get_time
    args: ["Monday, January 2, 2006 at 3:04 PM"]
    result: custom_format
  
  - action: log
    args: ["Custom format: ${custom_format}"]
  
  - action: get_time
    args: ["2006-01-02 15:04:05 MST"]
    result: with_timezone
  
  - action: log
    args: ["With timezone: ${with_timezone}"]
  
  # Test default format (no args)
  - action: get_time
    result: default_time
  
  - action: log
    args: ["Default format: ${default_time}"]

# Available formats:
# - iso: ISO 8601 format (2006-01-02T15:04:05Z07:00)
# - iso_date: ISO date only (2006-01-02)
# - iso_time: ISO time only (15:04:05)
# - datetime: Standard datetime (2006-01-02 15:04:05)
# - date: Date only (2006-01-02)
# - time: Time only (15:04:05)
# - timestamp: Compact timestamp (20060102150405)
# - unix: Unix timestamp (seconds since epoch)
# - unix_ms: Unix timestamp in milliseconds
# - Custom: Any valid Go time format string 