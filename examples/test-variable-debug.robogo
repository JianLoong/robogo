testcase: "Variable Debugging Demo"
description: "Demonstrates the variable debugging feature with missing and resolved variables"

variables:
  vars:
    defined_var: "I am defined"
    api_url: "https://httpbin.org/get"
    # Notice: missing_var is not defined
    # Notice: another_missing is not defined

steps:
  - name: "Step with resolved variable"
    action: log
    args: ["This uses a defined variable: ${defined_var}"]
    
  - name: "Step with missing variable"
    action: log  
    args: ["This uses a missing variable: ${missing_var}"]
    
  - name: "Step with multiple variables"
    action: log
    args: ["Defined: ${defined_var}, Missing: ${another_missing}, URL: ${api_url}"]
    
  - name: "HTTP request with variables"
    action: http
    args: ["GET", "${api_url}?param=${missing_var}&defined=${defined_var}"]
    result: response
    
  - name: "Template with variables"
    action: template
    args:
      - "Hello ${defined_var}, your missing value is ${missing_var}"
    result: template_result