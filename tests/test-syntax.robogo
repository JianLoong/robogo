# Test Robogo Syntax Highlighting
# This file demonstrates clean action-based syntax

testcase: "Clean Syntax Test"
description: "Test file to verify syntax highlighting with action-based syntax"

steps:
  - name: "Start test"
    action: log
    args: ["Starting test with clean action syntax"]
  
  - name: "Wait 2 seconds"
    action: sleep
    args: [2]
  
  - name: "Assert string equality"
    action: assert
    args: ["hello", "==", "hello", "String comparison should pass"]
  
  - name: "Assert number equality"
    action: assert
    args: [42, "==", 42, "Number comparison should pass"]
  
  - name: "Assert boolean equality"
    action: assert
    args: [true, "==", true, "Boolean comparison should pass"]
  
  - name: "Log completion"
    action: log
    args: ["All tests completed successfully!"]

