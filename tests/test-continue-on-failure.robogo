# Demo: Continue on Failure
# This test demonstrates the continue_on_failure feature for steps and loops

testcase: "Continue on Failure Demo"
description: "Demonstrates that steps with continue_on_failure: true do not stop the test on failure."

steps:
  - name: "Fail but continue"
    action: assert
    args: ["1", "==", "2"]
    continue_on_failure: true

  - name: "This will still run"
    action: log
    args: ["Continuing after failure"]

  - name: "Simple loop test"
    for:
      condition: "1..3"
      steps:
        - name: "Log iteration"
          action: log
          args: ["Iteration ${iteration}"]

  - name: "Final step"
    action: log
    args: ["Test completed with all failures reported"] 
