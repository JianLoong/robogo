# Test Variable Management Actions
# This file demonstrates dynamic variable management in Robogo

testcase: "Variable Management Test"
description: "Test file to demonstrate variable actions"

variables:
  vars:
    initial_value: "Hello"
    counter: "0"

steps:
  - name: "Show initial variables"
    action: log
    args: ["Initial value: ${initial_value}"]
  
  - name: "Show initial counter"
    action: log
    args: ["Initial counter: ${counter}"]

  - name: "Set a new variable"
    action: variable
    args: ["set_variable", "dynamic_var", "This is a dynamically set variable"]
    result: set_result

  - name: "Log set result"
    action: log
    args: ["Set result: ${set_result}"]

  - name: "Set variable with multiple arguments"
    action: variable
    args: ["set_variable", "multi_word_var", "Multiple", "words", "joined", "together"]
    result: multi_set_result

  - name: "Log multi-word set result"
    action: log
    args: ["Multi-word set result: ${multi_set_result}"]

  - name: "Update counter variable"
    action: variable
    args: ["set_variable", "counter", "5"]
    result: counter_set_result

  - name: "Log counter update result"
    action: log
    args: ["Counter update result: ${counter_set_result}"]

  - name: "Set a numeric variable"
    action: variable
    args: ["set_variable", "numeric_var", "42"]
    result: numeric_set_result

  - name: "Log numeric set result"
    action: log
    args: ["Numeric set result: ${numeric_set_result}"]

  - name: "Try to get a variable (placeholder)"
    action: variable
    args: ["get_variable", "dynamic_var"]
    result: get_result

  - name: "Log get result"
    action: log
    args: ["Get result: ${get_result}"]

  - name: "Try to list variables (placeholder)"
    action: variable
    args: ["list_variables"]
    result: list_result

  - name: "Log list result"
    action: log
    args: ["List result: ${list_result}"]

  - name: "Final message"
    action: log
    args: ["ðŸ”§ Variable management test completed!"]

# Variable Action Usage:
#
# Set a variable:
#   - action: variable
#     args: ["set_variable", "var_name", "value"]
#     result: result_var
#
# Set variable with multiple words:
#   - action: variable
#     args: ["set_variable", "var_name", "word1", "word2", "word3"]
#     result: result_var
#
# Get a variable (placeholder):
#   - action: variable
#     args: ["get_variable", "var_name"]
#     result: result_var
#
# List all variables (placeholder):
#   - action: variable
#     args: ["list_variables"]
#     result: result_var
#
# Note: get_variable and list_variables are placeholders.
# Use ${variable_name} syntax for variable substitution instead.

# Comments should be highlighted
# Variables: ${initial_value}, ${counter}, ${set_result}, ${multi_set_result}, ${counter_set_result}, ${numeric_set_result}, ${get_result}, ${list_result}
# Actions: log, variable
# Keywords: testcase, description, steps, action, args, result 